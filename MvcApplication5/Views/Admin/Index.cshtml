@model IEnumerable<MvcApplication5.Models.Employee>


@if (MyRoleProvider.Role(User.Identity.Name, new string[] { "Admin" })) {
    {
        ViewBag.Title = "Index";
    }
    <p>
        @Html.ActionLink("Добавить пользователя", "Create")
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idEmployee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.name)
                </td>
                <td>          
                @Html.ActionLink("Edit", "Edit", new { id=item.idEmployee }) 
                @Html.ActionLink("Details", "Details", new { id=item.idEmployee})
                @Html.ActionLink("Delete", "Delete", new { id=item.idEmployee })        
                </td>
            </tr>
        }
    </table>
}